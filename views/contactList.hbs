<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="description" content="Address Book application for viewing, searching, and saving contacts stored in a JSON file">
    <title>Address Book</title>
    <!-- jQuery and Bootstrap -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <!-- Handlebars Runtime and profile template -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.2/handlebars.runtime.js"></script>
    <script src="/views/profile.js"></script>
    <!-- Custom JS and CSS -->
    <script type="text/javascript" src="lookup.js" defer></script>
    <link rel="stylesheet" type="text/css" href="newstyle.css" />
    <!-- Open-Sans font and favicon -->
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Open+Sans:300,400,700" />
    <link rel="shortcut icon" href="/newmockup/paper.ico" type="image/x-icon">
</head>
<body>
    <div class="app-address-book">
        <!-- Navbar -->
        <div class="app-directory-container">
            <h3>Employee Directory</h3>
            <!-- TODO: Make login/register tabs more responsive -->
            <ul class="nav navbar-nav navbar-right">
                <li id="loggedInMenu" class="dropdown">
                    <a class="dropdown-toggle" href="#" data-toggle="dropdown">{{username}}<strong class="caret"></strong></a>
                    <div class="dropdown-menu">
                        <div class="glyphicon-container"><span class="glyphicon glyphicon-glass"></span></div>
                        <br>
                        <p class="preference-menu-header">Preferences</p>
                        <form class="contact-list-form" method="post" action="/newmockup/renderContactList" accept-charset="UTF-8">        
                            <div class="btn-container">
                                <button class="btn btn-info contact-list-form-btn" type="submit">Contact List</button>  
                            </div>  
                        </form>
                        <form class="logout-form" method="post" action="/newmockup/logout" accept-charset="UTF-8">
                            <div class="btn-container">        
                                <button class="btn btn-info logout-form-btn" type="submit">Logout</button> 
                            </div>   
                        </form>
                        <br>
                    </div>
                </li>
            </ul>
            <!-- Search -->
            <h4>Find Staff</h4>
            <div class="alphabet-links">
                <h5>
                </h5>
            </div>
            <div class="search-forms">
                <form class="nameSearchForm">
                    <div class="form-group app-search-form">
                        <input type="text" class="form-control" id="searchInput">
                    </div>
                    <button type="button" class="nameSearch btn btn-default app-search-form">Search by Name</button>
                </form>         
                <form class="deptSearchForm">
                    <div class="form-group app-search-form">
                        <input type="text" class="form-control" id="searchInput">
                    </div>
                    <button type="button" class="deptSearch btn btn-default app-search-form">Search by Department</button>
                </form>
            </div>
        </div>
        <!-- Profiles -->
        <div class="app-search-results">

            <!-- Render each contact -->
            <div class="app-person-profile docs-highlight docs-blue" data-intro="Person Profile" data-position="bottom">
                <div class="app-person-profile-header">
                    <div class="app-person-profile-photo" style="background-image: url({{picture}})" data-placement="right" data-content="{{desc}}" title="" data-toggle="popover" data-trigger="hover" href="#" data-original-title="Bio"></div>
                    <h2>{{name}}</h2>
                    <form class="addContactForm">
                        <button type="button" class="favIconBtn btn btn-default">Remove Contact</button>
                    </form>
                    <div class="app-person-profile-department">{{dept}}</div>
                    <div class="app-person-profile-phone-number">919-555-5555</div>
                    <div class="app-person-profile-email"><a href="{{emailUrl}}">{{email}}</a></div>
                </div>
                <div class="app-section">
                    <div class="app-section-header">
                        <h3>Education</h3>
                    </div>
                    <div class="app-section-body">
                        <div class="app-history-item">
                            <div class="app-history-item-dates-edu">{{education.startYear}}-{{education.endYear}}</div>
                            <div class="app-history-item-body">
                                <div class="app-history-item-title-edu">{{education.institution}}</div>
                                <div class="app-history-item-degree">{{education.degree}}</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="app-section">
                    <div class="app-section-header">
                        <h3>Experience</h3>
                    </div>
                    <div class="app-section-body">
                        <div class="app-history-item">
                            <div class="app-history-item-dates-work">{{workExperience.startYear}}-Present</div>
                            <div class="app-history-item-body">
                                <div class="app-history-item-title-work">{{workExperience.institution}}</div>
                                <div class="app-history-item-position">{{workExperience.title}}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



        </div>
    </div>
</body>
</html>