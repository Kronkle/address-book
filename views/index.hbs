<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Address Book</title>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <!-- Latest compiled and minified CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <!--<script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/3.0.3/handlebars.js"></script>-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/3.0.3/handlebars.runtime.js"></script>
    <script src="/newmockup/profile.js"></script>
    <script type="text/javascript" src="lookup.js" defer></script>
    <link rel="stylesheet" type="text/css" href="newstyle.css" />
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Open+Sans:300,400,700" />
</head>

<body>
    <div class="app-address-book">
        <!-- Navbar -->
        <div class="app-directory-container">
            <h3>Employee Directory</h3>
            <!-- TODO: Make login/register tabs more responsive -->
            <ul class="nav navbar-nav navbar-right">
                <li id="registerMenu" class="dropdown">
                    <a class="dropdown-toggle" href="#" data-toggle="dropdown">Sign Up <strong class="caret"></strong></a>
                    <div class="dropdown-menu">
                        <div class="glyphicon-container"><span class="glyphicon glyphicon-heart"></span></div>
                        <br>
                        <p class="signUpInText">Register Here:</p>
                        <form method="post" action="/newmockup/register" accept-charset="UTF-8">
                            <input class="form-inputs" type="text" placeholder="Username" id="usernameR" name="username">
                            <input class="form-inputs" type="password" placeholder="Password" id="passwordR" name="password">
                            <input class="form-inputs" type="text" placeholder="Email" id="emailR" name="email">
                            <div class="btn-container">
                                <button class="btn btn-info" type="submit">Register</button>
                            </div>             
                        </form>
                        <br>
                    </div>
                </li>
                <li id="loginMenu" class="dropdown">
                    <a class="dropdown-toggle" href="#" data-toggle="dropdown">Sign In <strong class="caret"></strong></a>
                    <div class="dropdown-menu">
                        <div class="glyphicon-container"><span class="glyphicon glyphicon-thumbs-up"></span></div>
                        <br>
                        <p class="signUpInText">Welcome Back!</p>   
                        <form method="post" action="/newmockup/login" accept-charset="UTF-8">
                            <input class="form-inputs" type="text" placeholder="Username" id="usernameL" name="username">
                            <input class="form-inputs" type="password" placeholder="Password" id="passwordL" name="password">
                            <div class="btn-container">
                                <button class="btn btn-info" type="submit">Login</button>
                            </div>
                        </form>
                        <br>
                </div>
                </li>
            </ul>
            <h4>Find Staff</h4>
            <div class="alphabet-links">
                <h5>
                </h5>
            </div>
            <div class="search-forms">
                    <form class="nameSearchForm">
                        <div class="form-group app-search-form">
                            <input type="text" class="form-control" id="nameSearchInput">
                        </div>
                        <button type="button" class="nameSearch btn btn-default app-search-form">Search by Name</button>
                    </form>
                
                    <form class="deptSearchForm">
                        <div class="form-group app-search-form">
                            <input type="text" class="form-control" id="deptSearchInput">
                        </div>
                        <button type="button" class="deptSearch btn btn-default app-search-form">Search by Department</button>
                    </form>
            </div>
        </div>
        <!-- Results Sort Dash will be here -->
        <div>
        </div>
        <!-- Results -->
        <div class="app-search-results">
        </div>
    </div>
</body>
</html>